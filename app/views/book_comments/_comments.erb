<% book.book_comments.each do |book_comment| %>
  <p><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %>
    <%= book_comment.comment %>
    <% if book_comment.user == current_user %>
      <%= link_to "Destory", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete,  class: "btn btn-sm btn-danger destroy_book_#{@book.id}", data: { confirm: '本当に消しましすか?'}, remote: true %>
    <% end %>
  </p>
    <%= link_to user_path(book.user) do  %>
      <%= book_comment.user.name %>
    <% end %>
<% end %>